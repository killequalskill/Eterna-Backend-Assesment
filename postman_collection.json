{
  "info": {
    "_postman_id": "meme-agg-service",
    "name": "Meme Aggregator Service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Tokens",
      "item": [
        {
          "name": "Get tokens (default)",
          "request": {
            "method": "GET",
            "url": "http://localhost:3000/tokens"
          }
        },
        {
          "name": "Get tokens: limit=20",
          "request": {
            "method": "GET",
            "url": "http://localhost:3000/tokens?limit=20"
          }
        },
        {
          "name": "Get tokens: sort=volume",
          "request": {
            "method": "GET",
            "url": "http://localhost:3000/tokens?sortBy=volume"
          }
        },
        {
          "name": "Get tokens: period=1h",
          "request": {
            "method": "GET",
            "url": "http://localhost:3000/tokens?period=1h"
          }
        },
        {
          "name": "Get tokens: period=24h",
          "request": {
            "method": "GET",
            "url": "http://localhost:3000/tokens?period=24h"
          }
        },
        {
          "name": "Get tokens: minPriceChange=15",
          "request": {
            "method": "GET",
            "url": "http://localhost:3000/tokens?minPriceChange=15"
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Trigger aggregation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "http://localhost:3000/admin/aggregate"
          }
        }
      ]
    },
    {
      "name": "Health",
      "item": [
        {
          "name": "Health check",
          "request": {
            "method": "GET",
            "url": "http://localhost:3000/health"
          }
        }
      ]
    }
  ]
}
